<script>
    var waypoint = new Waypoint({
        element: document.getElementById('brands'),
        handler: function(direction) {
            document.getElementById('brands').classList.remove('anim-hidden');
            document.getElementById('brands').classList.add('anim-zoom-in');

            // document.getElementById('brandsSub').classList.remove('anim-hidden');
