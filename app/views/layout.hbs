            document.getElementById('brandList').classList.remove('anim-hidden');
            document.getElementById('brandList').classList.add('anim-fade-in');
        },
        offset: 'bottom-in-view'
    })


    var wp_hero = new Waypoint.Inview({
        element: document.getElementById('hero'),
        enter: function(direction) {
            this.element.classList.remove('anim-paused');
        },
        exited: function(direction) {
            this.element.classList.add('anim-paused');
        }
    })

    var wp_design = new Waypoint.Inview({
        element: document.getElementById('design'),
        enter: function(direction) {
            this.element.classList.remove('anim-paused');
        },
        exited: function(direction) {
            this.element.classList.add('anim-paused');
        }
    })

